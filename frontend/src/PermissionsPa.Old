import React, { useState, useEffect } from 'react';
import { 
  Key, 
  Shield, 
  Search, 
  Save, 
  RefreshCw,
  AlertCircle,
  CheckCircle2,
  Users,
  Lock,
  Unlock,
  X,
  ChevronDown,
  ChevronRight
} from 'lucide-react';

const PermissionsPage = () => {
  const [roles, setRoles] = useState([]);
  const [permissions, setPermissions] = useState({});
  const [selectedRole, setSelectedRole] = useState('');
  const [rolePermissions, setRolePermissions] = useState([]);
  const [selectedPermissions, setSelectedPermissions] = useState(new Set());
  const [loading, setLoading] = useState(true);
  const [saving, setSaving] = useState(false);
  const [error, setError] = useState('');
  const [success, setSuccess] = useState('');
  const [searchTerm, setSearchTerm] = useState('');
  const [expandedModules, setExpandedModules] = useState(new Set());
  const [stats, setStats] = useState({});
  const [assignments, setAssignments] = useState([]);

  // Auto-dismiss success message after 3 seconds
  useEffect(() => {
    if (success) {
      const timer = setTimeout(() => {
        setSuccess('');
      }, 3000);
      
      return () => clearTimeout(timer);
    }
  }, [success]);

  useEffect(() => {
    fetchInitialData();
  }, []);

  useEffect(() => {
    if (selectedRole) {
      fetchRolePermissions();
    } else {
      setRolePermissions([]);
      setSelectedPermissions(new Set());
    }
  }, [selectedRole]);

  const fetchInitialData = async () => {
    try {
      setLoading(true);
      const token = localStorage.getItem('token');
      
      // Fetch all data in parallel
      const [rolesRes, permissionsRes, statsRes, assignmentsRes] = await Promise.all([
        fetch('/api/permissions/roles', { headers: { 'Authorization': `Bearer ${token}` } }),
        fetch('/api/permissions/grouped', { headers: { 'Authorization': `Bearer ${token}` } }),
        fetch('/api/permissions/stats/summary', { headers: { 'Authorization': `Bearer ${token}` } }),
        fetch('/api/permissions/assignments', { headers: { 'Authorization': `Bearer ${token}` } })
      ]);

      if (rolesRes.ok) {
        const rolesData = await rolesRes.json();
        setRoles(rolesData);
      }

      if (permissionsRes.ok) {
        const permissionsData = await permissionsRes.json();
        setPermissions(permissionsData);
        // Expand all modules by default
        setExpandedModules(new Set(Object.keys(permissionsData)));
      }

      if (statsRes.ok) {
        const statsData = await statsRes.json();
        setStats(statsData);
      }

      if (assignmentsRes.ok) {
        const assignmentsData = await assignmentsRes.json();
        setAssignments(assignmentsData);
      }

      setError('');
    } catch (err) {
      setError('Network error: Cannot connect to server');
      console.error('Error fetching data:', err);
    } finally {
      setLoading(false);
    }
  };

  const fetchRolePermissions = async () => {
    try {
      const token = localStorage.getItem('token');
      const response = await fetch(`/api/permissions/role/${selectedRole}`, {
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (response.ok) {
        const data = await response.json();
        setRolePermissions(data);
        setSelectedPermissions(new Set(data.map(p => p.permission_id)));
      }
    } catch (err) {
      console.error('Error fetching role permissions:', err);
    }
  };

  const handleRoleChange = (roleId) => {
    setSelectedRole(roleId);
    setError('');
    setSuccess('');
  };

  const handlePermissionToggle = (permissionId) => {
    const newSelected = new Set(selectedPermissions);
    if (newSelected.has(permissionId)) {
      newSelected.delete(permissionId);
    } else {
      newSelected.add(permissionId);
    }
    setSelectedPermissions(newSelected);
  };

  const handleModuleToggle = (moduleName) => {
    const modulePermissions = permissions[moduleName] || [];
    const allSelected = modulePermissions.every(p => selectedPermissions.has(p.permission_id));
    
    const newSelected = new Set(selectedPermissions);
    
    if (allSelected) {
      // Deselect all permissions in this module
      modulePermissions.forEach(p => newSelected.delete(p.permission_id));
    } else {
      // Select all permissions in this module
      modulePermissions.forEach(p => newSelected.add(p.permission_id));
    }
    
    setSelectedPermissions(newSelected);
  };

  const toggleModuleExpansion = (moduleName) => {
    const newExpanded = new Set(expandedModules);
    if (newExpanded.has(moduleName)) {
      newExpanded.delete(moduleName);
    } else {
      newExpanded.add(moduleName);
    }
    setExpandedModules(newExpanded);
  };

  const handleSave = async () => {
    if (!selectedRole) {
      setError('Please select a role first');
      return;
    }

    setSaving(true);
    setError('');
    setSuccess('');

    try {
      const token = localStorage.getItem('token');
      const response = await fetch('/api/permissions/assign', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          role_id: parseInt(selectedRole),
          permission_ids: Array.from(selectedPermissions)
        })
      });

      if (response.ok) {
        const result = await response.json();
        setSuccess(`Successfully assigned ${result.assigned_permissions} permissions to the selected role!`);
        fetchInitialData(); // Refresh assignments list
      } else {
        const errorData = await response.json();
        setError(errorData.message || 'Failed to assign permissions');
      }
    } catch (err) {
      setError('Network error: Cannot save permissions');
      console.error('Error saving permissions:', err);
    } finally {
      setSaving(false);
    }
  };

  const getFilteredModules = () => {
    if (!searchTerm) return permissions;
    
    const filtered = {};
    Object.keys(permissions).forEach(moduleName => {
      const modulePermissions = permissions[moduleName].filter(p =>
        p.form_name.toLowerCase().includes(searchTerm.toLowerCase()) ||
        p.action_name.toLowerCase().includes(searchTerm.toLowerCase()) ||
        p.permission_code.toLowerCase().includes(searchTerm.toLowerCase()) ||
        moduleName.toLowerCase().includes(searchTerm.toLowerCase())
      );
      
      if (modulePermissions.length > 0) {
        filtered[moduleName] = modulePermissions;
      }
    });
    
    return filtered;
  };

  const selectedRoleName = roles.find(r => r.role_id == selectedRole)?.role_name || '';

  if (loading) {
    return (
      <div className="flex items-center justify-center h-64">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-green-600"></div>
      </div>
    );
  }

  const filteredModules = getFilteredModules();

  return (
    <div className="p-6">
      {/* Header */}
      <div className="mb-8">
        <div className="flex items-center justify-between">
          <div>
            <h1 className="text-3xl font-bold text-gray-800 flex items-center">
              <Key className="w-8 h-8 mr-3 text-green-600" />
              Permission / Rights Assignment
            </h1>
            <p className="text-gray-600 mt-2">Configure permissions and assign rights to roles</p>
          </div>
          <button
            onClick={fetchInitialData}
            className="flex items-center space-x-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition duration-200"
          >
            <RefreshCw size={16} />
            <span>Refresh</span>
          </button>
        </div>
      </div>

      {/* Statistics Cards */}
      <div className="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div className="bg-white p-6 rounded-lg shadow-sm border">
          <div className="flex items-center">
            <div className="p-3 bg-green-100 rounded-full mr-4">
              <Key className="w-6 h-6 text-green-600" />
            </div>
            <div>
              <p className="text-sm font-medium text-gray-600">Total Permissions</p>
              <p className="text-2xl font-bold text-gray-900">{stats.total_permissions || 0}</p>
            </div>
          </div>
        </div>

        <div className="bg-white p-6 rounded-lg shadow-sm border">
          <div className="flex items-center">
            <div className="p-3 bg-blue-100 rounded-full mr-4">
              <Shield className="w-6 h-6 text-blue-600" />
            </div>
            <div>
              <p className="text-sm font-medium text-gray-600">Total Roles</p>
              <p className="text-2xl font-bold text-gray-900">{stats.total_roles || 0}</p>
            </div>
          </div>
        </div>

        <div className="bg-white p-6 rounded-lg shadow-sm border">
          <div className="flex items-center">
            <div className="p-3 bg-purple-100 rounded-full mr-4">
              <Users className="w-6 h-6 text-purple-600" />
            </div>
            <div>
              <p className="text-sm font-medium text-gray-600">Assignments</p>
              <p className="text-2xl font-bold text-gray-900">{stats.total_assignments || 0}</p>
            </div>
          </div>
        </div>

        <div className="bg-white p-6 rounded-lg shadow-sm border">
          <div className="flex items-center">
            <div className="p-3 bg-orange-100 rounded-full mr-4">
              <Lock className="w-6 h-6 text-orange-600" />
            </div>
            <div>
              <p className="text-sm font-medium text-gray-600">Configured Roles</p>
              <p className="text-2xl font-bold text-gray-900">{stats.roles_with_permissions || 0}</p>
            </div>
          </div>
        </div>
      </div>

      {/* Status Messages */}
      {error && (
        <div className="mb-6 p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg flex items-center">
          <AlertCircle size={20} className="mr-2 flex-shrink-0" />
          <span>{error}</span>
          <button
            onClick={() => setError('')}
            className="ml-auto text-red-500 hover:text-red-700"
          >
            <X size={16} />
          </button>
        </div>
      )}

      {success && (
        <div className="mb-6 p-4 bg-green-100 border border-green-300 text-green-700 rounded-lg flex items-center">
          <CheckCircle2 size={20} className="mr-2 flex-shrink-0" />
          <span>{success}</span>
          <button
            onClick={() => setSuccess('')}
            className="ml-auto text-green-500 hover:text-green-700"
          >
            <X size={16} />
          </button>
        </div>
      )}

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {/* Left Panel - Role Selection and Permissions */}
        <div className="lg:col-span-2 space-y-6">
          {/* Role Selection */}
          <div className="bg-white p-6 rounded-lg shadow-sm border">
            <h2 className="text-lg font-semibold mb-4 flex items-center">
              <Shield className="w-5 h-5 mr-2 text-blue-600" />
              Select Role
            </h2>
            <select
              value={selectedRole}
              onChange={(e) => handleRoleChange(e.target.value)}
              className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            >
              <option value="">Choose a role to assign permissions...</option>
              {roles.map(role => (
                <option key={role.role_id} value={role.role_id}>
                  {role.role_name} {role.role_description && `- ${role.role_description}`}
                </option>
              ))}
            </select>
          </div>

          {/* Permissions Assignment */}
          {selectedRole && (
            <div className="bg-white p-6 rounded-lg shadow-sm border">
              <div className="flex items-center justify-between mb-4">
                <h2 className="text-lg font-semibold flex items-center">
                  <Key className="w-5 h-5 mr-2 text-green-600" />
                  Assign Permissions to "{selectedRoleName}"
                </h2>
                <div className="text-sm text-gray-500">
                  {selectedPermissions.size} permissions selected
                </div>
              </div>

              {/* Search */}
              <div className="mb-4">
                <div className="relative">
                  <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" size={16} />
                  <input
                    type="text"
                    placeholder="Search permissions..."
                    value={searchTerm}
                    onChange={(e) => setSearchTerm(e.target.value)}
                    className="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-sm"
                  />
                </div>
              </div>

              {/* Permissions by Module */}
              <div className="space-y-4 max-h-96 overflow-y-auto">
                {Object.keys(filteredModules).map(moduleName => {
                  const modulePermissions = filteredModules[moduleName];
                  const isExpanded = expandedModules.has(moduleName);
                  const selectedCount = modulePermissions.filter(p => selectedPermissions.has(p.permission_id)).length;
                  const totalCount = modulePermissions.length;
                  const allSelected = selectedCount === totalCount;

                  return (
                    <div key={moduleName} className="border border-gray-200 rounded-lg">
                      <div className="p-3 bg-gray-50 border-b border-gray-200">
                        <div className="flex items-center justify-between">
                          <div className="flex items-center space-x-3">
                            <button
                              onClick={() => toggleModuleExpansion(moduleName)}
                              className="text-gray-500 hover:text-gray-700"
                            >
                              {isExpanded ? <ChevronDown size={16} /> : <ChevronRight size={16} />}
                            </button>
                            <h3 className="font-medium text-gray-900">{moduleName}</h3>
                            <span className="text-sm text-gray-500">
                              ({selectedCount}/{totalCount})
                            </span>
                          </div>
                          <button
                            onClick={() => handleModuleToggle(moduleName)}
                            className={`px-3 py-1 text-xs rounded-full transition-colors ${
                              allSelected
                                ? 'bg-green-100 text-green-800 hover:bg-green-200'
                                : 'bg-gray-100 text-gray-600 hover:bg-gray-200'
                            }`}
                          >
                            {allSelected ? 'Deselect All' : 'Select All'}
                          </button>
                        </div>
                      </div>

                      {isExpanded && (
                        <div className="p-3 space-y-2">
                          {modulePermissions.map(permission => (
                            <div key={permission.permission_id} className="flex items-center space-x-3">
                              <input
                                type="checkbox"
                                checked={selectedPermissions.has(permission.permission_id)}
                                onChange={() => handlePermissionToggle(permission.permission_id)}
                                className="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
                              />
                              <div className="flex-1">
                                <div className="text-sm font-medium text-gray-900">
                                  {permission.display_name || `${permission.form_name} - ${permission.action_name}`}
                                </div>
                                <div className="text-xs text-gray-500">
                                  {permission.description || `${permission.action_name} access for ${permission.form_name}`}
                                </div>
                                <div className="text-xs text-gray-400 font-mono">
                                  {permission.permission_code}
                                </div>
                              </div>
                            </div>
                          ))}
                        </div>
                      )}
                    </div>
                  );
                })}
              </div>

              {/* Save Button */}
              <div className="mt-6 flex justify-end">
                <button
                  onClick={handleSave}
                  disabled={saving || !selectedRole}
                  className="flex items-center space-x-2 px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition duration-200 disabled:opacity-50"
                >
                  {saving ? (
                    <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
                  ) : (
                    <Save size={16} />
                  )}
                  <span>{saving ? 'Saving...' : 'Save Permissions'}</span>
                </button>
              </div>
            </div>
          )}
        </div>

        {/* Right Panel - Current Assignments */}
        <div className="bg-white p-6 rounded-lg shadow-sm border">
          <h2 className="text-lg font-semibold mb-4 flex items-center">
            <Users className="w-5 h-5 mr-2 text-purple-600" />
            Current Assignments
          </h2>
          
          <div className="space-y-3 max-h-96 overflow-y-auto">
            {assignments.map(assignment => (
              <div key={assignment.role_id} className="p-3 border border-gray-200 rounded-lg">
                <div className="flex items-center justify-between mb-2">
                  <h3 className="font-medium text-gray-900">{assignment.role_name}</h3>
                  <span className="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                    {assignment.permission_count} permissions
                  </span>
                </div>
                {assignment.role_description && (
                  <p className="text-xs text-gray-500 mb-2">{assignment.role_description}</p>
                )}
                {assignment.permission_count > 0 ? (
                  <div className="flex items-center text-xs text-green-600">
                    <Unlock size={12} className="mr-1" />
                    Configured
                  </div>
                ) : (
                  <div className="flex items-center text-xs text-gray-400">
                    <Lock size={12} className="mr-1" />
                    No permissions assigned
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
};

export default PermissionsPage;