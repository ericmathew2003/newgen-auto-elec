import React, { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import { Settings, MapPin, Zap, Save, RotateCcw, Info } from 'lucide-react';

const DynamicTransactionMappingPage = () => {
  const navigate = useNavigate();
  
  const [mappingRules, setMappingRules] = useState([]);
  const [status, setStatus] = useState({ message: '', type: '' });
  const [loading, setLoading] = useState(false);

  // Sample mapping rules structure
  const sampleRules = [
    {
      id: 1,
      name: "Sales Invoice Mapping",
      sourceType: "SALES_INVOICE",
      debitAccount: "Accounts Receivable",
      creditAccount: "Sales Revenue",
      isActive: true
    },
    {
      id: 2,
      name: "Purchase Invoice Mapping",
      sourceType: "PURCHASE_INVOICE", 
      debitAccount: "Inventory",
      creditAccount: "Accounts Payable",
      isActive: true
    },
    {
      id: 3,
      name: "Payment Receipt Mapping",
      sourceType: "PAYMENT_RECEIPT",
      debitAccount: "Cash at Bank",
      creditAccount: "Accounts Receivable",
      isActive: true
    }
  ];

  useEffect(() => {
    // Initialize with sample data
    setMappingRules(sampleRules);
  }, []);

  const showMessage = (message, type) => {
    setStatus({ message, type });
    setTimeout(() => setStatus({ message: '', type: '' }), 5000);
  };

  const getStatusClasses = () => {
    if (status.type === 'success') {
      return 'bg-green-100 text-green-700 border-green-300';
    }
    if (status.type === 'error') {
      return 'bg-red-100 text-red-700 border-red-300';
    }
    return 'hidden';
  };

  const handleSave = () => {
    setLoading(true);
    // Simulate save operation
    setTimeout(() => {
      showMessage('Transaction mapping rules saved successfully!', 'success');
      setLoading(false);
    }, 1000);
  };

  const toggleRuleStatus = (ruleId) => {
    setMappingRules(prev => 
      prev.map(rule => 
        rule.id === ruleId 
          ? { ...rule, isActive: !rule.isActive }
          : rule
      )
    );
  };

  return (
    <div className="min-h-screen bg-gray-50 p-4 md:p-8">
      {/* Breadcrumb */}
      <nav className="flex mb-6" aria-label="Breadcrumb">
        <ol className="inline-flex items-center space-x-1 md:space-x-3">
          <li className="inline-flex items-center">
            <span className="text-sm font-medium text-gray-500">Accounts</span>
          </li>
          <li>
            <div className="flex items-center">
              <svg className="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clipRule="evenodd"></path>
              </svg>
              <span className="ml-1 text-sm font-medium text-gray-500 md:ml-2">Settings</span>
            </div>
          </li>
          <li>
            <div className="flex items-center">
              <svg className="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clipRule="evenodd"></path>
              </svg>
              <span className="ml-1 text-sm font-medium text-gray-700 md:ml-2">Dynamic Transaction Mapping</span>
            </div>
          </li>
        </ol>
      </nav>

      <div className="w-full max-w-4xl mx-auto">
        <header className="mb-8">
          <h1 className="text-3xl font-bold text-gray-800 flex items-center">
            <MapPin className="w-7 h-7 mr-3 text-purple-600" />
            Dynamic Transaction Mapping
          </h1>
          <p className="text-gray-500 mt-1">
            Configure automatic journal entry generation rules for different transaction types.
          </p>
        </header>

        {/* Status Message */}
        {status.message && (
          <div 
            className={`mb-6 p-4 rounded-lg border shadow-md flex items-center ${getStatusClasses()}`} 
            role="alert"
          >
            {status.type === 'success' && (
              <svg className="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
              </svg>
            )}
            {status.type === 'error' && (
              <svg className="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
              </svg>
            )}
            <span className="font-medium">{status.message}</span>
          </div>
        )}

        {/* Info Card */}
        <div className="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
          <div className="flex items-start">
            <Info className="w-5 h-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" />
            <div>
              <h3 className="text-sm font-medium text-blue-800 mb-1">About Dynamic Transaction Mapping</h3>
              <p className="text-sm text-blue-700">
                This feature automatically generates journal entries when transactions occur in other modules (Sales, Purchases, etc.). 
                Configure which accounts should be debited and credited for each transaction type.
              </p>
            </div>
          </div>
        </div>

        {/* Mapping Rules */}
        <div className="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
          <div className="px-6 py-4 border-b border-gray-200">
            <h2 className="text-lg font-semibold text-gray-800 flex items-center">
              <Zap className="w-5 h-5 mr-2 text-purple-600" />
              Transaction Mapping Rules
            </h2>
            <p className="text-sm text-gray-600 mt-1">
              Define how different transaction types should be automatically mapped to journal entries.
            </p>
          </div>

          <div className="overflow-x-auto">
            <table className="w-full">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Rule Name
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Source Type
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Debit Account
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Credit Account
                  </th>
                  <th className="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                  <th className="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {mappingRules.map((rule) => (
                  <tr key={rule.id} className="hover:bg-gray-50">
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="text-sm font-medium text-gray-900">{rule.name}</div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <span className="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                        {rule.sourceType}
                      </span>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {rule.debitAccount}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {rule.creditAccount}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-center">
                      <button
                        onClick={() => toggleRuleStatus(rule.id)}
                        className={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                          rule.isActive 
                            ? 'bg-green-100 text-green-800 hover:bg-green-200' 
                            : 'bg-red-100 text-red-800 hover:bg-red-200'
                        } transition-colors cursor-pointer`}
                      >
                        {rule.isActive ? 'Active' : 'Inactive'}
                      </button>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                      <button className="text-indigo-600 hover:text-indigo-900 mr-3">
                        Edit
                      </button>
                      <button className="text-red-600 hover:text-red-900">
                        Delete
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        {/* Action Buttons */}
        <div className="mt-8 flex justify-between">
          <div className="flex space-x-3">
            <button
              onClick={() => navigate('/accounts')}
              className="flex items-center space-x-2 px-6 py-3 border border-gray-300 text-gray-700 font-semibold rounded-lg shadow-sm hover:bg-gray-100 transition duration-200"
            >
              <span>Back to Accounts</span>
            </button>
            
            <button
              className="flex items-center space-x-2 px-6 py-3 border border-purple-300 text-purple-700 font-semibold rounded-lg shadow-sm hover:bg-purple-50 transition duration-200"
            >
              <Zap className="w-4 h-4" />
              <span>Add New Rule</span>
            </button>
          </div>

          <button
            onClick={handleSave}
            disabled={loading}
            className={`flex items-center space-x-2 px-6 py-3 font-semibold rounded-lg shadow-lg transition duration-200 ${
              loading 
                ? 'bg-gray-400 text-white cursor-not-allowed' 
                : 'bg-purple-600 text-white hover:bg-purple-700'
            }`}
          >
            <Save className="w-4 h-4" />
            <span>{loading ? 'Saving...' : 'Save Configuration'}</span>
          </button>
        </div>

        {/* Feature Preview */}
        <div className="mt-8 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-6 border border-purple-200">
          <h3 className="text-lg font-semibold text-gray-800 mb-3 flex items-center">
            <Zap className="w-5 h-5 mr-2 text-purple-600" />
            How Dynamic Transaction Mapping Works
          </h3>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div className="bg-white p-4 rounded-lg border border-purple-100">
              <h4 className="font-medium text-gray-800 mb-2">1. Transaction Occurs</h4>
              <p className="text-gray-600">When a sale, purchase, or payment is recorded in the system</p>
            </div>
            <div className="bg-white p-4 rounded-lg border border-purple-100">
              <h4 className="font-medium text-gray-800 mb-2">2. Rule Matching</h4>
              <p className="text-gray-600">System automatically finds the matching mapping rule</p>
            </div>
            <div className="bg-white p-4 rounded-lg border border-purple-100">
              <h4 className="font-medium text-gray-800 mb-2">3. Journal Creation</h4>
              <p className="text-gray-600">Corresponding journal entry is automatically generated</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default DynamicTransactionMappingPage;